<div class="container">
    <div class="row">
        <div class="col-md-5 offset-md-3">
            <div class="card card-body bg-dark p-4 text-white">


                <form action="/task/{{task._id}}/update" method="post">
                    <h1>Acrtualiza la Tarea</h1>
                    <div class="mb-3">
                        <input type="text" name="title" placeholder="Title" value="{{task.title}}"
                            class="form-control bg-dark text-white">
                    </div>

                    <div class="mb-3">
                        <textarea name="description" id="description" rows="3" placeholder="Description"
                            class="form-control bg-dark text-white">{{task.description}}</textarea>
                    </div>
                    <button class="btn btn-primary btn-sm mt-2">
                        Update
                    </button>
                </form>

            </div>
        </div>
    </div>
</div>